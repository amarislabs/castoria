{
    "name": "@amarislabs/castoria",
    "version": "1.0.0",
    "description": "CLI orchestrator for semantic versioning, changelog generation, and creating releases.",
    "author": "Yehezkiel Dio Sinolungan <yehezkieldio@proton.me>",
    "license": "MIT",
    "type": "module",
    "module": "./dist/index.js",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "bin": {
        "castoria": "./dist/cli.js"
    },
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "scripts": {
        "lint": "biome check src",
        "format": "biome format . --write",
        "typecheck": "tsc --noEmit",
        "build": "bun run scripts/build.ts"
    },
    "devDependencies": {
        "@amarislabs/bun-plugin-dts": "^1.0.0",
        "@biomejs/biome": "^1.9.4",
        "@types/semver": "^7.5.8",
        "@types/bun": "^1.2.4",
        "@types/node": "^22.13.7",
        "typescript": "^5.8.2"
    },
    "dependencies": {
        "@amarislabs/logger": "^1.1.1",
        "@clack/prompts": "^0.10.0",
        "@octokit/auth-token": "^5.1.2",
        "@octokit/core": "^6.1.4",
        "c12": "^3.0.2",
        "commander": "^13.1.0",
        "consola": "^3.4.0",
        "conventional-recommended-bump": "^11.0.0",
        "execa": "^9.5.2",
        "git-cliff": "^2.8.0",
        "neverthrow": "^8.2.0",
        "semver": "^7.7.1",
        "smol-toml": "^1.3.1"
    },
    "publishConfig": {
        "access": "public"
    },
    "files": ["dist"],
    "homepage": "https://github.com/amarislabs/castoria#readme",
    "repository": "github:amarislabs/castoria"
}
